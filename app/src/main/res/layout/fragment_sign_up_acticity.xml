<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.teachmate.teachmate.SignUp.NewSignUpActicity.UserDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/editTextNewFirstName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginLeft="5dp"
            android:hint="First Name"
            android:textColor="#000000"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextNewLastName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:hint="Last Name"
            android:textColor="#000000"
            android:singleLine="true" />

        <EditText
            tools:ignore="RtlCompat"
            android:id="@+id/editTextNewMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="#ff474747"
            android:singleLine="true" />

        <EditText
            tools:ignore="RtlCompat"
            android:id="@+id/editTextNewProfession"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginLeft="5dp"
            android:hint="Profession"
            android:textColor="#000000"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to TeachMate. Please enter the following details to register to our services!"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"
        android:layout_alignRight="@+id/linearLayout2"
        android:padding="5dp"
        android:layout_alignEnd="@+id/linearLayout2"
        android:gravity="center"
        android:background="@drawable/border_text" />
</RelativeLayout>
