<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/layoutProfilePhoto"
        android:padding="3dip"
        android:background="@drawable/image_bg"
        android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/user_icon"

        android:layout_width="90dp"
        android:layout_height="85dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="1dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textStyle="bold"
        android:fontFamily="sans"
        android:textColor="#000000"

        android:id="@+id/tvusername"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/layoutProfilePhoto"
        android:layout_toEndOf="@+id/layoutProfilePhoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:fontFamily="sans"

        android:textColor="#000000"
        android:id="@+id/tvquestion_id"
        android:textSize="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignBottom="@+id/tvusername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingTop="5dp"
        android:fontFamily="sans"
        android:paddingBottom="5dp"
        android:text="@string/Asked_Time"
        android:id="@+id/tvaskedtime"
        android:layout_below="@+id/tvusername"
        android:layout_toRightOf="@+id/layoutProfilePhoto"
        android:layout_toEndOf="@+id/layoutProfilePhoto" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="The actual question would be displayed here"
        android:id="@+id/tvquestion"
        android:fontFamily="sans"
        android:singleLine="true"
        android:maxLines="4"
        android:textColor="#000000"
        android:layout_below="@+id/layoutProfilePhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Category"
        android:textColor="#000000"
        android:fontFamily="sans"
        android:id="@+id/tvcategory"
        android:layout_below="@+id/tvaskedtime"
        android:layout_toRightOf="@+id/layoutProfilePhoto"
        android:layout_toEndOf="@+id/layoutProfilePhoto" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:id="@+id/imagearrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvaskedtime" />

</RelativeLayout>