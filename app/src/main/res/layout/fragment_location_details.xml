<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff026b6c"
    tools:context="com.teachmate.teachmate.SignUp.NewSignUpActicity.UserDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:padding="10dp">



        <EditText
            android:id="@+id/editTextAddress1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginTop="26dp"
            android:padding="5dp"
            android:ems="10"
            android:hint="Address1"
            android:layout_margin="10dp"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/editTextPinCode1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:ems="10"
            android:hint="Pin Code 1"
            android:background="@drawable/rounded_edit_text"
            android:layout_margin="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextAddress2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Address 2 (Optional)"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/editTextPinCode2"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edit_text"
            android:padding="5dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Pin Code 2 (Optional)"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter the locations in which you want to receive requests and help people!"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#ff454545"
        android:layout_alignRight="@+id/linearLayout2"
        android:padding="5dp"
        android:layout_alignEnd="@+id/linearLayout2"
        android:gravity="center"
        android:background="@drawable/border_text" />
</RelativeLayout>
