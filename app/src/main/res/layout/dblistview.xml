<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:id="@+id/dblist"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/userInfoNavigationDrawer"
        android:layout_below="@+id/spacerView1"
        android:layout_height="wrap_content"
        android:onClick="NavigatetoOfflineQuestions"
        android:background="#ff6f6f6f">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/View_Saved_Questions"
            android:id="@+id/textViewUserName"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/Title_Click_To_View_Offline"
            android:id="@+id/textViewEmailId"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/textViewUserName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff" />

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/imageView" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:id="@+id/spacerView2"
        android:layout_height="10dp"
        android:layout_below="@+id/userInfoNavigationDrawer"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#d29d9d9d" />




        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listViewdb"
            tools:listitem="@layout/singlerow"

            style="@style/AppTheme"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spacerView2" />


</RelativeLayout>