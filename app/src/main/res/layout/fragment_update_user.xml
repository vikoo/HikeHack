<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teachmate.teachmate.UpdateUserFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_500">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sign In Details"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textVIewUpdateEmailId"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Email : "
                android:layout_margin="10dp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:id="@+id/spacerView1"
            android:layout_below="@+id/LinearLayout"
            android:layout_height="2dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/LinearLayout"
            android:id="@+id/LinearLayout2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:onClick="ChangePassword"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Change Password"
                    android:id="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp" />

                <!-- Rightend Arrow -->
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:padding="10dp"
                    android:src="@drawable/arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout3"
            android:layout_below="@+id/LinearLayout2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_500">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="My Details"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#d29d9d9d">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp" />

            </RelativeLayout>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="none"
                android:id="@+id/editTextUpdateFirstName"
                android:hint="First Name" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="none"
                android:id="@+id/editTextUpdateLastName"
                android:hint="Last Name" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#d29d9d9d">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Phone Number"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp" />

            </RelativeLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="phone"
                android:id="@+id/editTextUpdatePhoneNumber"
                android:hint="Phone Number" />
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_margin="10dp"
            android:background="@drawable/styled_button"
            style="@style/button_text"
            android:id="@+id/buttonUpdate"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>

</FrameLayout>
